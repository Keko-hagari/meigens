<main>
  <div class="container">
    <form method="post" action="/meigen/create">
      <p>名言</p>
      <p><input type="text" name="main"></p>
      <p>作品名</p>
      <p><input type="text" name="title"></p>
      <p><input type="submit" value="名言を投稿"></p>
      <% if @message %><p class="error-message"><%= @message %><p><% end %>
    </form>
    <div>
      <table>
      <tr>
        <th>名言</th>
        <th>タイトル</th>
        <th>投稿者</th>
      </tr>
      <% @meigenlist.each do |meigen|%>
      <tr>
        <td>
          <a href= <%="/meigen/#{meigen[:id]}"%> ><%= meigen[:main] %></a>
        </td>
        <td>
          <%= meigen[:cartoon_title]%>
        </td>
        <td>
          <%= meigen.user[:name] %>
        </td>
      </tr>
      <% end %>
      </table>
    </div>
  </div>
</main>
<style>
.container {
 display: flex;
 justify-content: start;
}
.container div {
 margin: 50px 0;
}
.container form {
 margin: 70px 30px;
 width: 250px;
}
.container form input[type="submit"], input[type="text"] {
 width: 100%;
 height: 30px;
}
.check input[type="checkbox"] {
 width: 20px;
 height: 20px;
}
.check span {
 height: 30px;
 line-height: 30px;
}
.error-message {
 color: red;
 font-size: 14px;
}
a {
  text-decoration: none;
}

table th {
  font-size: 20px;
}

table td {
  font-size: 18px;
}

table{
  border-collapse: collapse;
  border-spacing: 0;
  width: 200%;
}

table tr{
  border-bottom: solid 1px #eee;
  cursor: pointer;
}

table th,table td{
  text-align: center;
  width: 25%;
  padding: 15px 0;
}
</style>